#!/bin/bash
# Turn on bash safety options: fail on error, variable unset and error in piped process
set -eou pipefail

# ARGS
DOKERFILE=$1
REPOSITORY=$2
IMAGE_NAME=$3

# Check if the correct number of arguments are passed
if [ "$#" -ne 3 ]; then
    echo "Usage: $0 <Dockerfile> <repository> <image-name>"
    exit 1
fi

# Get the current commit hash
COMMIT_HASH=$(git rev-parse HEAD)

# Get the current branch name and replace any '/' with '.'
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)
SANITIZED_BRANCH_NAME=${BRANCH_NAME//\//.}

SANITIZED_CARGO_WORKSPACE_VERSION=$(./scripts/movement/release-name)

# Tag and build the Docker image
IMG_NAME_TAG_COMMIT="${REPOSITORY}/${IMAGE_NAME}:${COMMIT_HASH}"
IMG_NAME_TAG_BRANCH="${REPOSITORY}/${IMAGE_NAME}:${SANITIZED_BRANCH_NAME}"
IMG_NAME_TAG_VERSION="${REPOSITORY}/${IMAGE_NAME}:${SANITIZED_CARGO_WORKSPACE_VERSION}"

docker buildx imagetools create --tag ${IMG_NAME_TAG_BRANCH} --tag ${IMG_NAME_TAG_COMMIT} --tag ${IMG_NAME_TAG_VERSION}  ${IMG_NAME_TAG_COMMIT}-amd64 ${IMG_NAME_TAG_COMMIT}-arm64